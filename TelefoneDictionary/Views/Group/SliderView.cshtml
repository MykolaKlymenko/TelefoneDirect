@{
    Layout = "~/Views/_TelephoneLayoutPage.cshtml";
    ViewBag.Title = "Tree";
}
@if(ViewBag.Groups.Count > 1)
{
    <div id="slides">
        <div class="slides-container">
            @foreach(var group in ViewBag.Groups)
        {
                <div class="module">
                    <header>
                        <h1>@group.name</h1>
                        <p></p>
                    </header>
                    <img src='@Url.Content(group.Photo)'>
                    <input class="hidden_pk" value=@group.GroupPK style="display:none" />
                </div>
        }
        </div>
    </div>
}
else
{
    foreach (var group in ViewBag.Groups)
    {
                <div class="module">
                    <header>
                        <h1>@group.name</h1>
                        <p></p>
                    </header>
                    <img src='@Url.Content(group.Photo)'>
                    <input class="hidden_pk" value=@group.GroupPK style="display:none" />
                </div>
    }
}
<script src="~/Scripts/jquery.animate-enhanced.min.js"></script>
<script src="~/Scripts/jquery.easing.1.3.js"></script>
<script src="~/Scripts/jquery.superslides.min.js" type="text/javascript" charset="utf-8"></script>
<script>
    (function ($) {
        if ($('.module').length == 1) {
            $('img').width(screen.width);
            $('img').height(screen.height-105);
            $('body').css("margin", " 0 0 0 0");
        }
    })(jQuery);
$('#slides')
    .superslides({
        slide_easing: 'easeOutBounce',
        slide_speed: 800,
        pagination: true,
        scrollable: true
    })
$('body').keypress(function (e) {
    if (e.which == 13) {
        var groupPK = $('.module').filter(function () {
            return ($(this).css('display') == 'block');
        }).children()[2].value;
        window.location.href = '/Record/RecordList/?groupPK=' + groupPK;
    }
});
</script>
